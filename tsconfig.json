{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "resolveJsonModule": true,
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es2018",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
